<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ravmjkbpojg21"
    tools:context=".DetailActivity5">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="45dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_marginTop="40dp"
                android:layout_marginLeft="70dp"
                android:id="@+id/txtPizza1"
                android:textColor="@color/Red"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beef Tapa"/>


            <TextView
                android:layout_below="@id/txtPizza1"
                android:id="@+id/txtPizza2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:textColor="#f1f1"
                android:textSize="20sp"
                android:text="Thành phần"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_below="@id/txtPizza2"
                android:id="@+id/txtPizza3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="Tender beef tapa served with garlic rice and fried egg."/>

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_below="@id/txtPizza3"
                android:id="@+id/txtPizza4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#f1f1"
                android:textSize="20sp"
                android:text="Kích cỡ / Giá"/>

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_below="@id/txtPizza4"
                android:id="@+id/txtPizza5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="Size S / 20cm / 90.000đ"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_below="@id/txtPizza5"
                android:id="@+id/txtPizza6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="Size M / 24cm / 120.000đ"/>

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_below="@id/txtPizza6"
                android:id="@+id/txtPizza7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="Size L / 29cm / 150.000đ"/>

            <ImageView
                android:id="@+id/imagePizza1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/txtPizza7"
                android:layout_marginStart="80dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/b5"
                android:layout_marginBottom="2dp" />

            <LinearLayout
                android:layout_below="@+id/imagePizza1"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnSua"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SỬA"/>

                <Button
                    android:id="@+id/btnxoa"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XOÁ"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>